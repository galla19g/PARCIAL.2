<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Editar Contacto</title>
  <link rel="stylesheet" href="/estilos.css">
</head>
<body>
  <h2>‚úèÔ∏è Editar contacto</h2>
  
  <form action="/actualizar/<%= contacto.id_contacto %>" method="post">
    <input name="primer_nombre" placeholder="Primer nombre" value="<%= contacto.primer_nombre %>" required>
    
    <input name="segundo_nombre" placeholder="Segundo nombre" value="<%= contacto.segundo_nombre || '' %>">
    
    <input name="primer_apellido" placeholder="Primer apellido" value="<%= contacto.primer_apellido %>" required>
    
    <input name="segundo_apellido" placeholder="Segundo apellido" value="<%= contacto.segundo_apellido || '' %>">
    
    <select name="id_genero" required>
      <option value="">Seleccione g√©nero</option>
      <% generos.forEach(g => { %>
        <option value="<%= g.id_genero %>" <%= g.id_genero == contacto.id_genero ? 'selected' : '' %>>
          <%= g.detalle_genero %>
        </option>
      <% }) %>
    </select>
    
    <select name="id_direccion" required>
      <option value="">Seleccione barrio</option>
      <% direcciones.forEach(d => { %>
        <option value="<%= d.id_direccion %>" <%= d.id_direccion == contacto.id_direccion ? 'selected' : '' %>>
          <%= d.detalle_direccion %>
        </option>
      <% }) %>
    </select>
    
    <select name="id_tipo_telefono" required>
      <option value="">Seleccione tipo de tel√©fono</option>
      <% tipos_telefono.forEach(t => { %>
        <option value="<%= t.id_tipo_telefono %>" <%= t.id_tipo_telefono == contacto.id_tipo_telefono ? 'selected' : '' %>>
          <%= t.detalle_tipo_telefono %>
        </option>
      <% }) %>
    </select>
    
    <input name="email" type="email" placeholder="Correo" value="<%= contacto.email %>" required>
    
    <input name="telefono" placeholder="Tel√©fono" value="<%= contacto.telefono %>" required>
    
    <button type="submit">üíæ Actualizar</button>
    <a href="/" style="display:inline-block; padding:6px 12px; background:#666; color:white; text-decoration:none; border-radius:3px;">‚ùå Cancelar</a>
  </form>
</body>
</html>